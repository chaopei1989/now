<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/av_dp_12"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_icon_left"
        android:layout_width="@dimen/av_dp_40"
        android:layout_height="@dimen/av_dp_40"
        android:layout_marginRight="@dimen/av_dp_10" />

    <LinearLayout
        android:layout_marginTop="@dimen/av_dp_6"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_80"
            android:textSize="@dimen/av_sp_12" />

        <TextView
            android:id="@+id/msg"
            android:background="@drawable/talking_bubble_yellow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/av_dp_230"
            android:textColor="@color/color_11"
            android:textSize="@dimen/av_sp_14" />

    </LinearLayout>

</LinearLayout>
