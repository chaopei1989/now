<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/av_dp_10"
    android:paddingBottom="@dimen/av_dp_10"
    android:paddingRight="@dimen/av_dp_24"
    android:paddingLeft="@dimen/av_dp_24"
    android:background="@drawable/selector_list_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/music_cover"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/av_dp_40"
        android:layout_height="@dimen/av_dp_40"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/av_dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_title"
            android:textColor="@color/color_50"
            android:textSize="@dimen/av_sp_14"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/music_artist"
            android:textSize="@dimen/av_sp_13"
            android:textColor="@color/color_b1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>
