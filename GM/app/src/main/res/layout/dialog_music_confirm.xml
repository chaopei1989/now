<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/av_dp_300"
    android:layout_height="@dimen/av_dp_151"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/av_dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/selector_list_item"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music_cover"
            android:src="@drawable/search_bg"
            android:layout_width="@dimen/av_dp_54"
            android:layout_height="@dimen/av_dp_54" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/av_dp_56"
            android:layout_marginLeft="@dimen/av_dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11111111111111111111111111111111111"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/av_sp_15" />

            <TextView
                android:id="@+id/music_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ems="10"
                android:text="11111111111111111111111111111111111"
                android:singleLine="true"
                android:textColor="@color/color_938e"
                android:textSize="@dimen/av_sp_14" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="@dimen/av_dp_100"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/av_dp_20"
            android:text="取消"
            android:textColor="@color/color_938e"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="@dimen/av_dp_100"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/av_dp_20"
            android:text="点播"
            android:textColor="@color/color_now_blue"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>