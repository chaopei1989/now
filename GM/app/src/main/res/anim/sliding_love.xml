<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 从画面最低部上升到74dp-->
    <translate
        android:fromYDelta="50%"
        android:toYDelta="-132%"
        android:duration="800"/>
    <alpha
        android:startOffset="400"
        android:fromAlpha="1"
        android:toAlpha="0"
        android:duration="400"/>
    <scale
        android:fromXScale="0.70"
        android:fromYScale="0.70"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:duration="800"/>
</set>
